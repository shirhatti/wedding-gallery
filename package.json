{
  "name": "wedding-gallery",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "init": "bash scripts/init-resources.sh",
    "dev": "concurrently -n viewer,video,pages -c cyan,yellow,magenta \"npm:dev:viewer\" \"npm:dev:video\" \"npm:dev:pages\"",
    "dev:viewer": "npm run dev -w workers/viewer",
    "dev:video": "npm run dev -w workers/video-streaming -- --port 8788",
    "dev:album": "npm run dev -w workers/album -- --port 8789",
    "dev:pages": "npm run dev -w pages/gallery",
    "dev:all": "concurrently -n viewer,video,album,pages -c cyan,yellow,green,magenta \"npm:dev:viewer\" \"npm:dev:video\" \"npm:dev:album\" \"npm:dev:pages\"",
    "build": "npm run build -w pages/gallery",
    "build:pages": "npm run build -w pages/gallery",
    "deploy:viewer": "npm run deploy -w workers/viewer",
    "deploy:album": "npm run deploy -w workers/album",
    "deploy:pages": "npm run build:pages && wrangler pages deploy pages/gallery/dist",
    "deploy:all": "npm run deploy:viewer && npm run deploy:album && npm run deploy:pages",
    "test": "vitest",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "workers/*",
    "pages/*"
  ],
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@cloudflare/vitest-pool-workers": "^0.9.9",
    "@cloudflare/workers-types": "^4.20251001.0",
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "better-sqlite3": "^12.4.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "exifr": "^7.1.3",
    "heic-convert": "^2.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.2",
    "playwright": "^1.56.1",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
