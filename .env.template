# Gallery Configuration Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control

# ============================================================================
# Cloudflare Configuration
# ============================================================================

# Your Cloudflare Account ID
# Get from: Cloudflare Dashboard -> Account ID (on the right sidebar)
CLOUDFLARE_ACCOUNT_ID=YOUR_ACCOUNT_ID_HERE

# Cloudflare API Token
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Cloudflare Pages (Edit), Workers (Edit), D1 (Edit), R2 (Edit), KV (Edit)
CLOUDFLARE_API_TOKEN=YOUR_API_TOKEN_HERE

# ============================================================================
# Gallery Settings
# ============================================================================

# Gallery password (optional - leave empty to disable password protection)
# Users will need to enter this to view the gallery
GALLERY_PASSWORD=

# Auth secret (required if GALLERY_PASSWORD is set)
# Generate with: openssl rand -base64 32
# This is used to sign authentication cookies
AUTH_SECRET=

# Allowed domain for cross-subdomain authentication
# Example: "yoursite.pages.dev" allows auth across preview.yoursite.pages.dev and yoursite.pages.dev
# Leave empty to only allow exact domain matches
ALLOWED_DOMAIN=

# ============================================================================
# Cloudflare Resources
# ============================================================================

# D1 Database ID
# Create with: wrangler d1 create YOUR_DATABASE_NAME
# Then get ID with: wrangler d1 list
D1_DATABASE_ID=YOUR_D1_DATABASE_ID
D1_DATABASE_NAME=YOUR_DATABASE_NAME

# KV Namespace IDs
# Create with: wrangler kv namespace create YOUR_NAMESPACE_NAME
# Create preview with: wrangler kv namespace create YOUR_NAMESPACE_NAME --preview
KV_NAMESPACE_ID=YOUR_KV_NAMESPACE_ID
KV_PREVIEW_NAMESPACE_ID=YOUR_KV_PREVIEW_NAMESPACE_ID

# R2 Bucket Name
# Create with: wrangler r2 bucket create YOUR_BUCKET_NAME
R2_BUCKET_NAME=YOUR_R2_BUCKET_NAME

# Cloudflare Pages Project Name
# The name of your Cloudflare Pages project
CLOUDFLARE_PAGES_PROJECT_NAME=YOUR_PAGES_PROJECT_NAME

# ============================================================================
# R2 Pre-signed URLs (Optional but Recommended)
# ============================================================================

# Enable pre-signed URLs for direct R2 access (reduces worker load)
# Set to "true" to enable
ENABLE_PRESIGNED_URLS=true

# R2 Access Credentials for pre-signed URLs
# Create at: Cloudflare Dashboard -> R2 -> Manage R2 API Tokens
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ACCOUNT_ID=
R2_BUCKET_NAME=
R2_REGION=auto

# ============================================================================
# Development Settings
# ============================================================================

# Disable authentication entirely (for local development only)
# Set to "true" to disable auth checks
DISABLE_AUTH=false

# API base URL for local development
# Leave empty for production
VITE_API_BASE=
